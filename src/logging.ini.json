{
    "AEDWIP COMMENT": "https://fangpenlin.com/posts/2012/08/26/good-logging-practice-in-python/",
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "formatExample": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "format": "[%(levelname)s %(filename)s:%(lineno)s - %(funcName) s()] %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "info.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        },

        "error_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "errors.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },

    "loggers": {
        "my_module": {
            "level": "ERROR",
            "handlers": ["console"],
            "propagate": "no"
        }
    },

    "root": {
        "level": "WARN",
        "handlers": ["console", "info_file_handler", "error_file_handler"]
    }
}